<div class="panel panel-info">
	<%= simple_nested_form_for @user, url: wizard_path, method: :put do |f| %>
	<%= f.fields_for :accounts do |a| %>
	<div class="panel-body">
	  <div class= "form-group">
	    <%= a.label :first_name %>
	    <%= a.text_field :first_name, class: "form-control" %>
	  </div>

	  <div class= "form-group">
	    <%= a.label :last_name %>
	    <%= a.text_field :last_name, class: "form-control" %>
	  </div>

	  <div class='form-group'>
	  	<%= a.label :mobile_number %>
	  	<%= a.text_field :mobile_number, class: 'form-control' %>
	  </div>

	  <div class='form-group'>
	  	<%= a.label :gender %>
	  	<%= a.select :gender, User.genders.keys, class: 'form-control' %>
	  </div>

	  <div class= "form-group">
	  	<%= a.label :date_of_birth %>
	    <%= a.date_select :date_of_birth, order: [:day, :month, :year], start_year: 1900, end_year: 2015, class: "form-control" %>
	  </div>
	  <hr>    
	  <% end %>
	  <%= f.submit %>
<% end %>
</div>

