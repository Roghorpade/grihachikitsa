<div class="panel panel-info">
	<%= simple_form_for @user.accounts.build, url: wizard_path, method: :put do |f| %>
	<% session[:accounts_count].times do |index| %>
	<div class="panel-body">
	  
	  <h1><%= index + 1 %></h1
	  <div class= "form-group">
	    <%= f.label :first_name %>
	    <%= f.text_field :first_name_1, class: "form-control" %>
	  </div>

	  <div class= "form-group">
	    <%= f.label :last_name_1 %>
	    <%= f.text_field :last_name, class: "form-control" %>
	  </div>

	  <div class='form-group'>
	  	<%= f.label :mobile_number %>
	  	<%= f.text_field :mobile_number, class: 'form-control' %>
	  </div>

	  <div class='form-group'>
	  	<%= f.label :gender %>
	  	<%= f.select :gender, User.genders.keys, class: 'form-control' %>
	  </div>

	  <div class= "form-group">
	  	<%= f.label :date_of_birth %>
	    <%= f.date_select :date_of_birth, order: [:day, :month, :year], start_year: 1900, end_year: 2015, class: "form-control" %>
	  </div>
	  <hr>    
	  <% end %>
	  <%= f.submit %>
<% end %>
</div>

